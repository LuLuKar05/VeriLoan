{
  "name": "veriloan-backend",
  "version": "1.0.0",
  "description": "VeriLoan Backend - Concordium ZKP Verification Service",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:direct": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "mongodb:start": "docker start veriloan-mongodb || docker run -d --name veriloan-mongodb -p 27017:27017 -v mongodb_veriloan_data:/data/db mongo:latest",
    "mongodb:stop": "docker stop veriloan-mongodb",
    "mongodb:logs": "docker logs -f veriloan-mongodb",
    "mongodb:shell": "docker exec -it veriloan-mongodb mongosh",
    "inspect-db": "tsx inspect-db.ts",
    "clear-db": "tsx clear-db.ts"
  },
  "keywords": [
    "concordium",
    "zkp",
    "verification",
    "identity",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@concordium/web-sdk": "^7.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "mongodb": "^6.20.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
